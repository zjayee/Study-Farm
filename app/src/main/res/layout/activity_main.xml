<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/lightgreybackground"
    >


<!--    <LinearLayout-->
<!--        android:id="@+id/linearlayout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:orientation="vertical"-->
<!--        >-->


<!--    </LinearLayout>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <androidx.cardview.widget.CardView
          android:id="@+id/headerCard"
          android:layout_width="match_parent"
          android:layout_height="268dp"
          android:layout_marginTop="-15dp"
          app:cardCornerRadius="20dp"
          >
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:src="@drawable/header"
              android:scaleType="centerCrop"
              />
          <TextView
              android:id="@+id/dateDayTextview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="14"
              android:textColor="@color/white"
              android:fontFamily="@font/open_sans_light"
              android:textSize="72sp"
              android:layout_gravity="right"
              android:layout_marginTop="15dp"
              android:layout_marginRight="15dp"
              />

          <TextView
              android:id="@+id/dateMonthYearTextview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:text="21/02"
              android:fontFamily="@font/open_sans_light"
              android:textColor="@color/white"
              android:textSize="16sp"
              android:layout_gravity="right"
              android:layout_marginTop="100dp"
              android:layout_marginRight="15dp"
              />

          <TextView
              android:id="@+id/dateWeekdayTextview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:text="Sun"
              android:fontFamily="@font/open_sans_light"
              android:textColor="@color/white"
              android:textSize="16sp"
              android:layout_gravity="right"
              android:layout_marginTop="120dp"
              android:layout_marginRight="15dp"
              />

             <TextView
                 android:id="@+id/quoteTextview"
                 android:layout_width="350dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="bottom"
                 android:layout_marginBottom="60dp"
                 android:layout_marginLeft="25dp"
                 android:text="&quot;This is a quote, it's very inspirational&quot;"
                 android:fontFamily="@font/open_sans"
                 android:textColor="@color/white"
                 android:textSize="23sp"
                 />

          <TextView
              android:id="@+id/quoteSourceTextview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:layout_marginBottom="25dp"
              android:layout_marginLeft="175dp"
              android:text="- Source"
              android:fontFamily="@font/open_sans"
              android:textColor="@color/white"
              android:textSize="23dp"
              android:textStyle="bold"
              />


      </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:drawableLeft="@drawable/ic_mail"
            android:backgroundTint="@color/white"
            android:text="@string/reflect"
            android:textColor="@color/textlight1"
            android:textAllCaps="false"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="50dp"
            android:layout_marginTop="10dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginHorizontal="15dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="5dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_marginHorizontal="15dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            >
        <!-- TODO: add calendar -->

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/suggested_quests"
            style="@style/thin_header_26"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            />

    </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/navigation"
        layout="@layout/item_bottom_navigation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>